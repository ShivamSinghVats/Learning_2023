// Day 1

#include<stdio.h>
#include<conio.h>
int main()
{
    int a, b, big;
    printf("Enter any two number: ");
    scanf("%d%d", &a, &b);
    if(a>b)
        big=a;
    else
        big=b;
    printf("\nBiggest of the two number is: %d", big);
    getch();
    return 0;
}

// Using ternary operator

int main()
{
    int a, b, biggest;
    printf("Enter any two numbers: ");
    scanf("%d%d", &a, &b);
    biggest = (num1>num2) ? num1 : num2;
    printf("\nLargest = %d", biggest);
    getch();
    return 0;
}

// 2

#include <stdio.h>
int main(void)
{
int num;
printf("Enter your mark ");
scanf("%d",&num);
printf(" You entered %d", num);

	if(num >= 90|| num<= 100){
	printf(" Grade A"); 
		}
        else if ( num >=75|| num<=89){ 
		printf("Grade B");
		}
        else if ( num >=60|| num<=74){
		printf("Grade C");
		}
        else if ( num >=50|| num<=59){
		printf("Grade D");
		}
        else if ( num < 40){
		printf("Grade F");
		}
        return 0;
}


