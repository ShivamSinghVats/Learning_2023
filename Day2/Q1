#include <stdio.h>

int main() {
  double x = 0.7;
  int exponent;

  exponent = *((int *)&x) & 0x7FF;
  printf("Exponent in hexadecimal format: 0x%X\n", exponent);

  int binaryExponent = 0;
  for (int i = 0; i < 8; i++) {
    binaryExponent = binaryExponent * 2 + (exponent & 1);
    exponent >>= 1;
  }

  printf("Exponent in binary format: 0b%d\n", binaryExponent);

  return 0;
}